<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16213e"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SC2 Zerg Bot Monitor"
            android:textColor="#00ff00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />

        <!-- Status Indicator -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connecting..."
            android:textColor="#00ff00"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dp" />

        <!-- Resources Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1a1a2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resources"
                    android:textColor="#00ff00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/mineralsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minerals: 0"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/vespeneText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vespene: 0"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/supplyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Supply: 0/0"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:padding="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Units Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1a1a2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Units"
                    android:textColor="#00ff00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/unitsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Units: 0"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:padding="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#1a1a2e"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Statistics"
                    android:textColor="#00ff00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/winRateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Win Rate: 0.0%"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:padding="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
